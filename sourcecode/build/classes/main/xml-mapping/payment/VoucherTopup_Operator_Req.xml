<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">
<mapping>
	<class name="com.mpos.lottery.te.merchant.web.OperatorTopupDto">
		<map-to xml="Topup" />

		<field name="amount" type="java.math.BigDecimal" required="true">
			<bind-xml name="amount" node="attribute" />
		</field>
		<field name="operatorId" type="java.lang.String" required="false">
			<bind-xml name="operatorId" node="attribute" />
		</field>
        <field name="voucherSerialNo" type="java.lang.String" required="false">
            <bind-xml name="voucherSN" node="attribute" />
        </field>		
		<field name="saleBalance" type="java.math.BigDecimal" required="false">
			<bind-xml name="balance" node="attribute" />
		</field>
	</class>
</mapping>