<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">
<mapping>
    <class name="com.mpos.lottery.te.gameimpl.instantgame.domain.InstantTicket">
        <map-to xml="Ticket" />

        <field name="serialNo" type="java.lang.String" required="true">
            <bind-xml name="serialNo" node="attribute" />
        </field>
        <field name="soldTime" type="string" handler="com.mpos.lottery.te.port.protocol.TimestampFieldHandler" required="false">
            <bind-xml name="soldTime" node="attribute" />
        </field>
        <field name="totalAmount" type="java.math.BigDecimal" >
            <bind-xml name="amount" node="attribute" />
        </field>
    </class>

</mapping>